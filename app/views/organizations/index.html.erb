<% @organizations.each do |organization| %>
  <div class = "card">
    <div class = "card-header">
      <%= organization.location %>
    </div>
    <div class = "card-block">
     <h4 class = "card-title"><%= organization.name %></h4>
     <p class = "card-text"><%= organization.biography %></p>
     <% if @user %>
       <%= link_to "Follow", user_organization_relationships_path(user_id: @user.id, organization_id: organization.id), method: :post %>
     <% end %>
     <%= link_to "Show", organization_path(id: organization.id), class: "btn btn-primary" %>
   </div>
  </div>
<% end %>

<%= link_to 'New Organization', new_organization_path %>
